doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(type='text/css', rel='stylesheet', href='/javascripts/widget/css/rcarousel.css')

    script(type='text/javascript', src='/javascripts/widget/lib/jquery-1.7.1.min.js')
    script(type='text/javascript', src='/javascripts/widget/lib/jquery.ui.core.min.js')
    script(type='text/javascript', src='/javascripts/widget/lib/jquery.ui.widget.min.js')
    script(type='text/javascript', src='/javascripts/widget/lib/jquery.ui.rcarousel.min.js')
    
    script(type='text/javascript')
      jQuery(function($){
        $( "#carousel").rcarousel({auto: {enabled: "false"}, width: 200, height: 300, visible: 1, step: 1});
      });

  body
    block content

    style
      h1 {
      background-color:#3B5998;
      font-size:36px;
      text-align:center;
      color:white;
      }
      ul {
      font-family: Arial, Verdana;
      font-size: 14px;
      margin: 0;
      padding: 0;
      list-style: none;
      }
      ul li {
      display: block;
      position: relative;
      float: left;
      }
      li ul {
      display: none;
      }
      ul li a {
      display: block;
      text-decoration: none;
      color: #ffffff;
      border-top: 1px solid #ffffff;
      padding: 5px 15px 5px 15px;
      background: #1e7c9a;
      margin-left: 1px;
      white-space: nowrap;
      }
      ul li a:hover {
      background: #3b3b3b;
      }
      li:hover ul {
      display: block;
      position: absolute;
      }
      li:hover li {
      float: none;
      font-size: 11px;
      }
      li:hover a { background: #3b3b3b; }
      li:hover li a:hover {
      background: #1e7c9a;
      }
      #topfriend{
      font-size:20px;
      }
      input[type=submit]{
      display: block;
      text-decoration: none;
      color: #ffffff;
      border-top: 1px solid #ffffff;
      padding: 5px 15px 5px 15px;
      background: #1e7c9a;
      margin-left: 1px;
      margin-top:-1px;
      white-space: nowrap;
      }auto: {enabled: true}